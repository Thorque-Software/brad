{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "outDir": "./dist",
        "allowJs": true,
        "paths": {
            "@/*": ["./*"]
        }
    },
    "include": [
        "src/**/*.ts",
        "index.ts",
    ],
    "exclude": ["node_modules", "dist"]
}
